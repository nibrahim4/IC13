<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="237dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="20dp"
        android:text="@string/tv_tripName_trips"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_city_trips"
        android:layout_width="235dp"
        android:layout_height="66dp"
        android:layout_below="@+id/tv_description"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="9dp"
        android:text="@string/tv_city_trips"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_addPlace"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="13dp"
        android:layout_toEndOf="@+id/tv_description"
        android:text="@string/btn_addPlace"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/iv_mapIcon"
        android:layout_width="129dp"
        android:layout_height="61dp"
        android:layout_below="@+id/btn_addPlace"
        android:layout_alignStart="@+id/btn_addPlace"
        android:layout_marginStart="3dp"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/icons8googlemaps400" />

    <ListView
        android:id="@+id/lv_selectedPlaces"
        android:layout_width="356dp"
        android:layout_height="468dp"
        android:layout_below="@+id/tv_city_trips"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="17dp" />
</RelativeLayout>